<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    tools:context=".UI.Worldly.WorldlyActivity">




    <ImageView
        android:id="@+id/back_image_worldly"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_baseline_menu_open_24"
        android:layout_margin="3dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/personreadingbook3"
        app:layout_constraintTop_toBottomOf="@id/show_question"
        app:layout_constraintBottom_toTopOf="@id/show_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintVertical_bias="0.4"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/personkreslo"
        app:layout_constraintTop_toBottomOf="@id/show_question"
        app:layout_constraintBottom_toTopOf="@id/show_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/personreadingbook"
        app:layout_constraintTop_toBottomOf="@id/show_question"
        app:layout_constraintBottom_toTopOf="@id/show_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/personreadingbook2"
        app:layout_constraintTop_toBottomOf="@id/show_question"
        app:layout_constraintBottom_toTopOf="@id/show_answer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.6"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_question"
        app:layout_constraintLeft_toLeftOf="@id/show_answer"
        app:layout_constraintRight_toRightOf="@id/show_answer"
        android:text="Kim o'tirgan holda yuradi?"
        android:textColor="@color/tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/question_text_bg"
        android:minHeight="70dp"
        android:gravity="center|left"
        android:paddingLeft="75dp"
        android:paddingVertical="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="-5dp"/>
    <ImageView
        android:id="@+id/person_question"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/question"
        app:layout_constraintBottom_toBottomOf="@id/question"
        android:layout_marginLeft="15dp"
        android:src="@drawable/personteacher"
        app:layout_constraintLeft_toLeftOf="@id/question"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/show_question"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/question"
            android:backgroundTint="@color/tema"
            android:gravity="center|right"
            android:paddingRight="65dp"
            android:text="savol"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_close_open_question"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/show_answer"
        app:layout_constraintLeft_toLeftOf="@id/show_answer"
        app:layout_constraintRight_toRightOf="@id/show_answer"
        android:text="shaxmatchi"
        android:textColor="@color/tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/answers_bg"
        android:layout_marginBottom="-5dp"
        android:minHeight="70dp"
        android:gravity="left|center"
        android:paddingLeft="75dp"
        android:paddingVertical="10dp"
        android:paddingRight="5dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/show_answer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_answer"
            android:backgroundTint="@color/tema"
            android:gravity="center|right"
            android:text="javob"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingRight="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_close_open_answer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="3dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/person_answer"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/answer"
        app:layout_constraintBottom_toBottomOf="@id/answer"
        android:layout_marginLeft="15dp"
        android:src="@drawable/personkey"
        app:layout_constraintLeft_toLeftOf="@id/answer"/>






</androidx.constraintlayout.widget.ConstraintLayout>