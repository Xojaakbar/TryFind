<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0F3FF"
    tools:context=".UI.Menu.MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#E0F3FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="Topchi"
            android:textColor="@color/tema"
            android:textSize="28sp" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:layout_weight="1">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="70dp"
            android:elevation="4dp"
            android:backgroundTint="#33000000"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/logical"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/tema"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Ochiq test"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="70dp"
            android:elevation="4dp"
            app:cardElevation="4dp"
            android:backgroundTint="#33000000"
            app:cardMaxElevation="4dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/closed_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tema"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Yopiq test"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="70dp"
            android:elevation="4dp"
            app:cardElevation="4dp"
            android:backgroundTint="#33000000"
            app:cardMaxElevation="4dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tema"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Chiqish"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"/>
</androidx.appcompat.widget.LinearLayoutCompat>